<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Ends at:</strong>
  <%= @project.ends_at %>
</p>

<h3>Tasks for this project</h3>

<ul>
  <% @project.tasks.each do |task|%>
  <li>
    <!-- Using task_done#{@task.id} in this way each checkbox will be different -->
    <%= check_box_tag "task_done_#{task.id}", "", task.done, class: "task_done", data: { id: task.id } %>
    <%= link_to task.title, task%>
  </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
